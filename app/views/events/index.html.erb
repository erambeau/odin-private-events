<h1>Events</h1>

<% @events.each do |e| %>
    <h2><%= e.location %><h2>
    <p><%= e.date_event %></p>
    <% if user_signed_in? %>
        <%= form_with(model: EventAttending.new, url: "/events_attendings", method: "post", data: { turbo: false} ) do |f| %>
            <%= f.number_field :event_id, type: :hidden, value: e.id %>
            <%= f.number_field :user_id, type: :hidden, value: current_user.id %>
            <%= f.submit "S'inscrire" %>
        <% end %>
    <% end %>
<% end %>